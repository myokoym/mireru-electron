# Environment Variables for Mireru Demo

# Application settings
NODE_ENV=development
APP_NAME=Mireru
APP_VERSION=0.1.0

# Paths
HOME_DIRECTORY=/home/user
DEFAULT_PREVIEW_SIZE=100KB
MAX_FILE_SIZE=1MB

# Performance settings
DIRECTORY_CACHE_SIZE=10
SYNTAX_HIGHLIGHT_DELAY=500
LARGE_FILE_THRESHOLD=50KB

# Feature flags
ENABLE_SEARCH=true
ENABLE_METADATA_SIDEBAR=true
ENABLE_SYNTAX_HIGHLIGHTING=true
ENABLE_IMAGE_ZOOM=true

# Debug settings
DEBUG_MODE=false
LOG_LEVEL=info
ENABLE_DEV_TOOLS=true