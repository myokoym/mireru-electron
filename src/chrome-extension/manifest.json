{
  "manifest_version": 3,
  "name": "Mireru - File Explorer",
  "version": "0.1.0",
  "description": "Keyboard-friendly file explorer with vim-like navigation. View files, images, videos, and PDFs directly in your browser.",
  
  "action": {
    "default_title": "Open Mireru File Explorer",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "permissions": [
    "storage",
    "tabs"
  ],
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "author": "Mireru Project",
  "homepage_url": "https://github.com/myokoym/mireru-electron",
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}