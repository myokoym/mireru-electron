{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "Node16",
    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist"
  },
  "include": ["src/main/**/*"],
  "exclude": ["test", "release/build", "release/app/dist", "dist", "node_modules"]
}
